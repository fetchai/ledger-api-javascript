{
  "name": "ledger-api-javascript",
  "version": "1.0.0",
  "description": "Fetch.AI Ledger Javascript API",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src/ -d dist/",
    "test": "jest src/test",
    "lint": "eslint .",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand src/test",
    "coverage": "jest src/test --coverage --coverageDirectory=coverage"
  },
  "jest": {
    "setupFiles": [
      "./src/tests/utils/helpers.js"
    ],
    "coverageReporters": [
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "atob": "^2.1.2",
    "await-of": "^1.2.0",
    "axios": "^0.19.0",
    "bignumber.js": "^7.2.1",
    "bn.js": "^5.0.0",
    "bs58": "^4.0.1",
    "btoa": "^1.2.1",
    "buffer-reverse": "^1.0.1",
    "crypto": "^1.0.1",
    "eslint-plugin-jest": "^22.19.0",
    "fastest-validator": "^0.6.12",
    "jest-coverage-validator": "^0.6.9",
    "secp256k1": "^3.7.1",
    "semver": "^6.3.0",
    "wait-on": "^3.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-decorators": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-decorators": "^7.2.0",
    "@babel/plugin-transform-flow-strip-types": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "jest-coverage-ratchet": "^0.2.3",
    "prettier-eslint": "^8.8.2"
  }
}
